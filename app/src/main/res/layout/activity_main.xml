<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.felip.ejerciciopreferencias.MainActivity">

    <TextView
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nom"
        android:layout_alignBaseline="@+id/et_nom"
        android:layout_alignBottom="@+id/et_nom"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_nom"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/et_dni" />

    <TextView
        android:text="F. de Nacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/tv_nac"
        android:layout_below="@+id/et_dni"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/et_nac"
        android:layout_alignBaseline="@+id/tv_nac"
        android:layout_alignBottom="@+id/tv_nac"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="DNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/tv_dni"
        android:layout_below="@+id/et_nom"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_dni"
        android:layout_alignBaseline="@+id/tv_dni"
        android:layout_alignBottom="@+id/tv_dni"
        android:layout_alignStart="@+id/et_nac"
        android:layout_marginStart="10dp" />

    <RadioButton
        android:text="Masculino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb_masc"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/et_nac"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="Femenino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb_masc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/rb_fem" />

    <TextView
        android:text="Sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nac"
        android:layout_marginTop="18dp"
        android:id="@+id/textView4"
        android:layout_alignEnd="@+id/tv_nom"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb_fem"
        android:layout_toEndOf="@+id/rb_fem"
        android:layout_marginTop="26dp"
        android:id="@+id/btn_guarda" />
</RelativeLayout>
